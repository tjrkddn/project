#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#define MAX_PRODUCTS 100
#define NUM_PRODUCTS 5

void all_stock(int stock[]) {
	int type,ID;
	printf("입고수량 입력:전체 상품 입고수량 입력 1, 개별 상품 입력 2를 선택.\n>");
	scanf("%d", &type);

	if (type == 1) {
		for (int i = 0;i < NUM_PRODUCTS;i++) {
			scanf("%d", &stock[i]);
		}
	}
	else if (type == 2) {
		printf("상품ID:");
		scanf("%d", &ID);
		if (ID > NUM_PRODUCTS) {
			printf("상품ID를 5이하로 입력해주세요.\n");
			return;
		}
		printf("입고수량:");
		scanf("%d", stock[ID - 1]);
	}
}










int main() {
	int ID, product_num=0;
	int i;
	int stock[NUM_PRODUCTS];
	int sales[MAX_PRODUCTS];
	int invantory[MAX_PRODUCTS];
	int total_sales = 0;
	float percent = 0.0;
	int total_invantory = 0;
	int choice;
	printf("[쇼핑몰 관리 프로그램]\n");
	while (1) {
		printf("원하는 메뉴를 선택하세요.(1.입고, 2.판매,3.상품현황,4.종료)\n>");
		scanf("%d", &choice);
		switch (choice) {
		case 1:
			all_stock(stock);// 입고 함수 호출
			continue;
		case 2:
			 // 판매 함수 호출
			continue;
		case 3:
			 // 현황 함수 호출
			continue;
		case 4:
			return 0; // return 0;을 만나면 main 함수가 종료되어 프로그램이 끝남
		default:
			printf("다시 입력해주세요.\n");
			break;
		}
	}
	for (i = 0;i < NUM_PRODUCTS;i++) {
		printf("%d", stock[i])
	}
	
	return 0;
}
